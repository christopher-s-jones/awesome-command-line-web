---
import Image from 'astro/components/Image.astro';
import logo from '../assets/awesome-command-line-logo.svg';
---
<!-- Header -->
<div class="flex flex-col lg:flex-row gap-10 lg:px-20
    items-center justify-center lg:justify-start
    mt-[50px] lg:mb-10
    w-full h-full max-w-7xl"
>
    <img id="logo" class="z-0 w-[128px]" 
        src={logo.src} 
        alt="Awesome Command Line Logo" 
        fetchpriority="high"
    />
    <h1 class="
        z-0 flex flex-col md:flex-row items-center md:gap-2 text-nowrap
        text-transparent bg-clip-text bg-gradient-to-r 
        from-amber-500 from-20% to-fuchsia-500 to-90%
        dark:from-amber-400 dark:from-10% dark:to-fuchsia-100 dark:to-70%
        "
    >
        <span class="
            font-script
            italic text-7xl lg:text-8xl
            lg:flex"
        >Awesome
        </span>
            
        <span class="lg:mx-2 md:pt-4 font-sans text-4xl lg:text-5xl 
            font-normal not-italic text-nowrap"
        >Command Line
        </span>
    </h1>
</div>
